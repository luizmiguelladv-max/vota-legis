<body>
  <div class="d-flex">
    @include('partials/sidebar')

    <div class="main-content flex-grow-1">
      @include('partials/navbar')

      <main class="p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h4 class="section-title mb-0">
            <i class="bi bi-pencil me-2"></i>Editar Camara
          </h4>
          <a href="/admin/municipios/{{ municipio.id }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Voltar
          </a>
        </div>

        <div class="card">
          <div class="card-body">
            <form method="POST" action="/admin/municipios/{{ municipio.id }}?_method=PUT">
              {{ csrfField() }}
              
              <div class="row g-3">
                <div class="col-md-8">
                  <label class="form-label">Nome da Camara *</label>
                  <input type="text" class="form-control" name="nome" value="{{ municipio.nome }}" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label">UF *</label>
                  <select class="form-select" name="uf" required>
                    <option value="AC" {{ municipio.uf === 'AC' ? 'selected' : '' }}>Acre</option>
                    <option value="AL" {{ municipio.uf === 'AL' ? 'selected' : '' }}>Alagoas</option>
                    <option value="SP" {{ municipio.uf === 'SP' ? 'selected' : '' }}>Sao Paulo</option>
                    <option value="RJ" {{ municipio.uf === 'RJ' ? 'selected' : '' }}>Rio de Janeiro</option>
                    <option value="MG" {{ municipio.uf === 'MG' ? 'selected' : '' }}>Minas Gerais</option>
                    <option value="PR" {{ municipio.uf === 'PR' ? 'selected' : '' }}>Parana</option>
                    <option value="SC" {{ municipio.uf === 'SC' ? 'selected' : '' }}>Santa Catarina</option>
                    <option value="RS" {{ municipio.uf === 'RS' ? 'selected' : '' }}>Rio Grande do Sul</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">CNPJ</label>
                  <input type="text" class="form-control" name="cnpj" value="{{ municipio.cnpj }}">
                </div>
                <div class="col-md-4">
                  <label class="form-label">Telefone</label>
                  <input type="text" class="form-control" name="telefone" value="{{ municipio.telefone }}">
                </div>
                <div class="col-md-4">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" value="{{ municipio.email }}">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Total de Vereadores</label>
                  <input type="number" class="form-control" name="total_vereadores" value="{{ municipio.totalVereadores }}" min="5" max="55">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Status</label>
                  <select class="form-select" name="ativo">
                    <option value="true" {{ municipio.ativo ? 'selected' : '' }}>Ativo</option>
                    <option value="false" {{ !municipio.ativo ? 'selected' : '' }}>Inativo</option>
                  </select>
                </div>
                <div class="col-12">
                  <label class="form-label">Endereco</label>
                  <input type="text" class="form-control" name="endereco" value="{{ municipio.endereco }}">
                </div>
              </div>

              <hr class="my-4">
              
              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-lg me-1"></i>Salvar
                </button>
                <a href="/admin/municipios/{{ municipio.id }}" class="btn btn-outline-secondary">Cancelar</a>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>
  </div>

