<!DOCTYPE html>
<html lang="pt-BR">
<head>
  @include('partials/head')
</head>
<body>
  <div class="d-flex">
    @include('partials/sidebar')

    <div class="main-content flex-grow-1">
      @include('partials/navbar')

      <main class="p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h4 class="section-title mb-1">
              <i class="bi bi-cloud-download me-2"></i>Backups
            </h4>
            <p class="text-muted mb-0">Gerenciamento de backups do sistema</p>
          </div>
          <button class="btn btn-primary" onclick="criarBackup()">
            <i class="bi bi-plus me-2"></i>Novo Backup
          </button>
        </div>

        @if(flashMessages.has('success'))
          <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>{{ flashMessages.get('success') }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        @endif

        <!-- Status do Backup -->
        <div class="row g-4 mb-4">
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-1">Ultimo Backup</h6>
                    <span class="fs-5 fw-bold" id="ultimoBackup">{{ ultimoBackup || 'Nunca' }}</span>
                  </div>
                  <i class="bi bi-clock-history text-primary fs-1 opacity-50"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-1">Total de Backups</h6>
                    <span class="fs-4 fw-bold">{{ totalBackups || 0 }}</span>
                  </div>
                  <i class="bi bi-archive text-success fs-1 opacity-50"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-1">Espaco Usado</h6>
                    <span class="fs-5 fw-bold">{{ espacoUsado || '0 MB' }}</span>
                  </div>
                  <i class="bi bi-hdd text-warning fs-1 opacity-50"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Configuração de Backup Automático -->
        <div class="card mb-4">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-gear me-2"></i>Backup Automatico</h6>
          </div>
          <div class="card-body">
            <form class="row g-3">
              <div class="col-md-4">
                <label class="form-label">Frequencia</label>
                <select class="form-select" name="frequencia">
                  <option value="diario">Diario</option>
                  <option value="semanal">Semanal</option>
                  <option value="mensal">Mensal</option>
                  <option value="desativado">Desativado</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Horario</label>
                <input type="time" class="form-control" name="horario" value="03:00">
              </div>
              <div class="col-md-4">
                <label class="form-label">Manter ultimos</label>
                <select class="form-select" name="manter">
                  <option value="7">7 backups</option>
                  <option value="15">15 backups</option>
                  <option value="30">30 backups</option>
                </select>
              </div>
              <div class="col-12">
                <button type="button" class="btn btn-primary" onclick="salvarConfiguracao()">
                  <i class="bi bi-check me-2"></i>Salvar Configuracao
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Lista de Backups -->
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-list-ul me-2"></i>Backups Disponiveis</h6>
          </div>
          <div class="card-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Data</th>
                  <th>Tipo</th>
                  <th>Tamanho</th>
                  <th>Status</th>
                  <th width="150">Acoes</th>
                </tr>
              </thead>
              <tbody>
                @if(backups && backups.length > 0)
                  @each(backup in backups)
                    <tr>
                      <td>{{ backup.data_formatada }}</td>
                      <td>
                        @if(backup.tipo === 'automatico')
                          <span class="badge bg-info">Automatico</span>
                        @else
                          <span class="badge bg-primary">Manual</span>
                        @end
                      </td>
                      <td>{{ backup.tamanho }}</td>
                      <td>
                        @if(backup.status === 'concluido')
                          <span class="badge bg-success">Concluido</span>
                        @elseif(backup.status === 'em_andamento')
                          <span class="badge bg-warning">Em andamento</span>
                        @else
                          <span class="badge bg-danger">Falha</span>
                        @end
                      </td>
                      <td>
                        <button class="btn btn-sm btn-outline-primary" title="Download">
                          <i class="bi bi-download"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-success" title="Restaurar">
                          <i class="bi bi-arrow-counterclockwise"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" title="Excluir">
                          <i class="bi bi-trash"></i>
                        </button>
                      </td>
                    </tr>
                  @end
                @else
                  <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                      <i class="bi bi-archive fs-1"></i>
                      <p class="mb-0 mt-2">Nenhum backup disponivel</p>
                    </td>
                  </tr>
                @end
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>

  @include('partials/scripts')

  <script>
    function criarBackup() {
      toastr.info('Iniciando backup... Isso pode demorar alguns minutos.');
    }

    function salvarConfiguracao() {
      toastr.success('Configuracao salva com sucesso!');
    }
  </script>
</body>
</html>
