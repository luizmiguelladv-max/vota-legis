      background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    }

    .vote-panel {
      background: white;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }

    .vote-btn {
      padding: 20px 40px;
      border-radius: 12px;
      font-size: 1.25rem;
      font-weight: 700;
      border: none;
      transition: all 0.3s;
      min-width: 150px;
    }

    .vote-btn.favor {
      background: var(--cor-favor);
      color: white;
    }

    .vote-btn.contra {
      background: var(--cor-contra);
      color: white;
    }

    .vote-btn.abstencao {
      background: var(--cor-abstencao);
      color: white;
    }

    .vote-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .result-bar {
      height: 40px;
      border-radius: 10px;
      overflow: hidden;
      background: #e2e8f0;
    }

    .result-favor {
      background: var(--cor-favor);
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
    }

    .result-contra {
      background: var(--cor-contra);
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
    }

    /* How it works */
    .step-card {
      text-align: center;
      position: relative;
    }

    .step-number {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--cor-primaria), var(--cor-secundaria));
      color: white;
      font-size: 24px;
      font-weight: 700;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 20px;
