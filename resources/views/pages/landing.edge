      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.12);
      border-color: var(--cor-primaria);
    }

    .feature-icon {
      width: 70px;
      height: 70px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      margin-bottom: 24px;
    }

