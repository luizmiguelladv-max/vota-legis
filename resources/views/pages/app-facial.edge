<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="theme-color" content="#1a1a2e">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="Ponto Facial">

  <title>Ponto Facial | Reconhecimento</title>

  <link rel="manifest" href="/manifest.json">
  <link rel="apple-touch-icon" href="/icons/icon-192.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --bg-gradient: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      --primary: #4f46e5;
      --success: #10b981;
      --danger: #ef4444;
      --warning: #f59e0b;
    }

    * {
      box-sizing: border-box;
      -webkit-tap-highlight-color: transparent;
    }

    body {
      font-family: 'Inter', -apple-system, sans-serif;
      background: var(--bg-gradient);
      min-height: 100vh;
      margin: 0;
      padding: 0;
      color: white;
      overflow: hidden;
    }

    .app-container {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .header {
      padding: 16px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0,0,0,0.2);
    }

    .logo {
      font-size: 18px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .clock-section {
      text-align: right;
    }

    .clock {
      font-size: 28px;
      font-weight: 300;
      letter-spacing: 1px;
    }

    .date {
      font-size: 12px;
      opacity: 0.7;
    }

    /* Camera Area */
    .camera-area {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px;
      position: relative;
    }

    .camera-container {
      width: 100%;
      max-width: 400px;
      aspect-ratio: 3/4;
      position: relative;
      border-radius: 24px;
      overflow: hidden;
      background: rgba(0,0,0,0.3);
      box-shadow: 0 0 0 4px rgba(255,255,255,0.1);
    }

    #videoElement {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scaleX(-1); /* Mirror effect */
    }

    .camera-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
    }

    /* Face guide oval */
    .face-guide {
      position: absolute;
      top: 10%;
      left: 15%;
      right: 15%;
      bottom: 25%;
      border: 3px dashed rgba(255,255,255,0.3);
      border-radius: 50%;
      transition: all 0.3s;
    }

    .face-guide.detecting {
      border-color: var(--warning);
      animation: pulse 1s infinite;
    }

    .face-guide.recognized {
      border-color: var(--success);
      border-style: solid;
      animation: none;
    }

    .face-guide.error {
      border-color: var(--danger);
      border-style: solid;
    }

    @keyframes pulse {
      0%, 100% { opacity: 0.5; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.02); }
    }

    /* Scan line animation */
    .scan-line {
      position: absolute;
      left: 15%;
      right: 15%;
      height: 4px;
      background: linear-gradient(90deg, transparent, var(--primary), transparent);
      border-radius: 2px;
      display: none;
      box-shadow: 0 0 20px var(--primary);
    }

    .scan-line.active {
      display: block;
      animation: scanLine 2s infinite;
    }

    @keyframes scanLine {
      0% { top: 15%; opacity: 0; }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% { top: 70%; opacity: 0; }
    }

    /* Status message */
    .status-area {
      margin-top: 24px;
      text-align: center;
    }

    .status-text {
      font-size: 24px;
      font-weight: 500;
      margin-bottom: 8px;
      min-height: 32px;
    }

    .status-sub {
      font-size: 14px;
      opacity: 0.7;
    }

    /* User info after recognition */
    .user-info {
      display: none;
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      padding: 20px;
      margin-top: 20px;
      text-align: center;
      animation: fadeIn 0.3s ease;
    }

    .user-info.show {
      display: block;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .user-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: var(--primary);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 12px;
      font-size: 32px;
      font-weight: 600;
    }

    .user-name {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .user-role {
      font-size: 14px;
      opacity: 0.7;
      margin-bottom: 16px;
    }

    .confidence-bar {
      height: 6px;
      background: rgba(255,255,255,0.2);
      border-radius: 3px;
      overflow: hidden;
      margin-bottom: 8px;
    }

    .confidence-fill {
      height: 100%;
      background: var(--success);
      border-radius: 3px;
      transition: width 0.3s;
    }

    .confidence-text {
      font-size: 12px;
      opacity: 0.7;
    }

    .registro-result {
      margin-top: 16px;
      padding: 12px;
      border-radius: 12px;
      font-weight: 500;
    }

    .registro-result.entrada {
      background: rgba(16, 185, 129, 0.2);
      color: var(--success);
    }

    .registro-result.saida {
      background: rgba(239, 68, 68, 0.2);
      color: var(--danger);
    }

    /* Controls */
    .controls {
      padding: 16px 20px;
      background: rgba(0,0,0,0.2);
      display: flex;
      justify-content: center;
      gap: 16px;
    }

    .btn {
      padding: 12px 24px;
      border-radius: 12px;
      border: none;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.2s;
    }

    .btn-primary {
      background: var(--primary);
      color: white;
    }

    .btn-secondary {
      background: rgba(255,255,255,0.1);
      color: white;
    }

    .btn:active {
      transform: scale(0.95);
    }

    /* Status indicator */
    .status-indicator {
      position: fixed;
      bottom: 80px;
      left: 50%;
      transform: translateX(-50%);
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .status-indicator.online {
      background: rgba(16, 185, 129, 0.2);
      color: var(--success);
    }

    .status-indicator.offline {
      background: rgba(239, 68, 68, 0.2);
      color: var(--danger);
    }

    .status-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: currentColor;
    }

    /* Hidden canvas for capture */
    #captureCanvas {
      display: none;
    }

    /* Loading overlay */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.8);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 100;
    }

    .loading-overlay.show {
      display: flex;
    }

    .loading-content {
      text-align: center;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 4px solid rgba(255,255,255,0.2);
      border-top-color: var(--primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 16px;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Countdown timer */
    .countdown {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 64px;
      font-weight: 700;
      opacity: 0;
      transition: opacity 0.3s;
    }

    .countdown.show {
      opacity: 1;
      animation: countdownPulse 1s;
    }

    @keyframes countdownPulse {
      0% { transform: translateX(-50%) scale(1.5); opacity: 0; }
      50% { transform: translateX(-50%) scale(1); opacity: 1; }
      100% { transform: translateX(-50%) scale(0.8); opacity: 0; }
    }
  </style>
</head>
<body>
  <div class="app-container">
    <!-- Header -->
    <div class="header">
      <div class="logo">
        <i class="bi bi-person-bounding-box"></i>
        <span>Ponto Facial</span>
      </div>
      <div class="clock-section">
        <div class="clock" id="clock">00:00:00</div>
        <div class="date" id="date">--</div>
      </div>
    </div>

    <!-- Camera Area -->
    <div class="camera-area">
      <div class="camera-container">
        <video id="videoElement" autoplay playsinline muted></video>
        <canvas id="captureCanvas"></canvas>

        <div class="camera-overlay">
          <div class="face-guide" id="faceGuide"></div>
          <div class="scan-line" id="scanLine"></div>
          <div class="countdown" id="countdown"></div>
        </div>
      </div>

      <!-- Status -->
      <div class="status-area">
        <div class="status-text" id="statusText">Iniciando camera...</div>
        <div class="status-sub" id="statusSub">Aguarde</div>
      </div>

      <!-- User Info (shown after recognition) -->
      <div class="user-info" id="userInfo">
        <div class="user-avatar" id="userAvatar">?</div>
        <div class="user-name" id="userName">-</div>
        <div class="user-role" id="userRole">-</div>
        <div class="confidence-bar">
          <div class="confidence-fill" id="confidenceFill" style="width: 0%"></div>
        </div>
        <div class="confidence-text" id="confidenceText">Confianca: --%</div>
        <div class="registro-result" id="registroResult"></div>
      </div>
    </div>

    <!-- Controls -->
    <div class="controls">
      <button class="btn btn-secondary" onclick="toggleAutoCapture()">
        <i class="bi bi-pause-circle" id="autoIcon"></i>
        <span id="autoText">Auto</span>
      </button>
      <button class="btn btn-primary" onclick="captureManual()">
        <i class="bi bi-camera"></i>
        Registrar
      </button>
      <button class="btn btn-secondary" onclick="voltarApp()">
        <i class="bi bi-arrow-left"></i>
        Voltar
      </button>
    </div>

    <!-- Status Indicator -->
    <div class="status-indicator" id="statusIndicator">
      <span class="status-dot"></span>
      <span id="indicatorText">Verificando...</span>
    </div>
  </div>

  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-content">
      <div class="loading-spinner"></div>
      <div id="loadingText">Processando...</div>
    </div>
  </div>

  <script>
    // Estado da aplicacao
    let videoStream = null;
    let autoCapture = true;
    let isProcessing = false;
    let lastRecognition = null;
    let cooldownActive = false;

    // Elementos
    const video = document.getElementById('videoElement');
    const canvas = document.getElementById('captureCanvas');
    const faceGuide = document.getElementById('faceGuide');
    const scanLine = document.getElementById('scanLine');
    const statusText = document.getElementById('statusText');
    const statusSub = document.getElementById('statusSub');
    const userInfo = document.getElementById('userInfo');
    const loadingOverlay = document.getElementById('loadingOverlay');

    // Inicializa relogio
    function updateClock() {
      const now = new Date();
      document.getElementById('clock').textContent = now.toLocaleTimeString('pt-BR');
      document.getElementById('date').textContent = now.toLocaleDateString('pt-BR', {
        weekday: 'long',
        day: '2-digit',
        month: 'long'
      });
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Inicia camera
    async function initCamera() {
      try {
        updateStatus('Iniciando camera...', 'Aguarde');

        const constraints = {
          video: {
            facingMode: 'user',
            width: { ideal: 640 },
            height: { ideal: 480 }
          },
          audio: false
        };

        videoStream = await navigator.mediaDevices.getUserMedia(constraints);
        video.srcObject = videoStream;

        video.onloadedmetadata = () => {
          canvas.width = video.videoWidth;
          canvas.height = video.videoHeight;

          updateStatus('Posicione seu rosto', 'Dentro da moldura oval');
          faceGuide.classList.add('detecting');

          // Inicia captura automatica
          if (autoCapture) {
            startAutoCapture();
          }
        };

        checkAPIStatus();
      } catch (err) {
        console.error('Erro ao acessar camera:', err);
        updateStatus('Erro na camera', err.message);
        faceGuide.classList.add('error');
      }
    }

    // Verifica status da API DeepFace
    async function checkAPIStatus() {
      try {
        const res = await fetch('/api/facial/status');
        const data = await res.json();

        const indicator = document.getElementById('statusIndicator');
        const indicatorText = document.getElementById('indicatorText');

        if (data.online) {
          indicator.className = 'status-indicator online';
          indicatorText.textContent = `DeepFace Online (${data.faces || 0} faces)`;
        } else {
          indicator.className = 'status-indicator offline';
          indicatorText.textContent = 'DeepFace Offline';
        }
      } catch (err) {
        document.getElementById('statusIndicator').className = 'status-indicator offline';
        document.getElementById('indicatorText').textContent = 'API Offline';
      }
    }

    // Atualiza status
    function updateStatus(text, sub = '') {
      statusText.textContent = text;
      statusSub.textContent = sub;
    }

    // Captura automatica a cada 3 segundos
    let autoCaptureInterval = null;

    function startAutoCapture() {
      if (autoCaptureInterval) clearInterval(autoCaptureInterval);

      autoCaptureInterval = setInterval(() => {
        if (!isProcessing && !cooldownActive && autoCapture) {
          captureAndRecognize();
        }
      }, 3000);
    }

    function stopAutoCapture() {
      if (autoCaptureInterval) {
        clearInterval(autoCaptureInterval);
        autoCaptureInterval = null;
      }
    }

    function toggleAutoCapture() {
      autoCapture = !autoCapture;
      const icon = document.getElementById('autoIcon');
      const text = document.getElementById('autoText');

      if (autoCapture) {
        icon.className = 'bi bi-pause-circle';
        text.textContent = 'Auto';
        startAutoCapture();
      } else {
        icon.className = 'bi bi-play-circle';
        text.textContent = 'Manual';
        stopAutoCapture();
      }
    }

    function captureManual() {
      if (!isProcessing && !cooldownActive) {
        captureAndRecognize();
      }
    }

    // Captura frame e envia para reconhecimento
    async function captureAndRecognize() {
      if (isProcessing) return;
      isProcessing = true;

      try {
        // Visual feedback
        scanLine.classList.add('active');
        faceGuide.className = 'face-guide detecting';
        updateStatus('Processando...', 'Aguarde');

        // Captura frame
        const ctx = canvas.getContext('2d');
        ctx.drawImage(video, 0, 0);
        const imageData = canvas.toDataURL('image/jpeg', 0.8);

        // Envia para API
        const res = await fetch('/api/facial/reconhecer', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ foto_base64: imageData })
        });

        const data = await res.json();

        scanLine.classList.remove('active');

        if (data.success && data.funcionario_id) {
          // Reconhecido!
          handleRecognized(data);
        } else {
          // Nao reconhecido
          handleNotRecognized(data.error || 'Rosto nao reconhecido');
        }
      } catch (err) {
        console.error('Erro ao processar:', err);
        scanLine.classList.remove('active');
        handleNotRecognized('Erro de conexao');
      } finally {
        isProcessing = false;
      }
    }

    // Trata reconhecimento bem-sucedido
    async function handleRecognized(data) {
      faceGuide.className = 'face-guide recognized';
      updateStatus(`Ola, ${data.nome.split(' ')[0]}!`, 'Registrando ponto...');

      // Vibra se suportado
      if (navigator.vibrate) navigator.vibrate([100, 50, 100]);

      // Mostra info do usuario
      document.getElementById('userAvatar').textContent = data.nome.charAt(0);
      document.getElementById('userName').textContent = data.nome;
      document.getElementById('userRole').textContent = data.cargo || 'Funcionario';

      const confidence = Math.round((data.confidence || 0.9) * 100);
      document.getElementById('confidenceFill').style.width = confidence + '%';
      document.getElementById('confidenceText').textContent = `Confianca: ${confidence}%`;

      userInfo.classList.add('show');

      // Registra ponto automaticamente
      try {
        const registroRes = await fetch('/api/facial/registrar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            funcionario_id: data.funcionario_id,
            foto_base64: canvas.toDataURL('image/jpeg', 0.6)
          })
        });

        const registro = await registroRes.json();

        const resultEl = document.getElementById('registroResult');

        if (registro.success) {
          resultEl.className = `registro-result ${registro.tipo.toLowerCase()}`;
          resultEl.innerHTML = `<i class="bi bi-check-circle me-2"></i>${registro.tipo} registrada as ${registro.hora}`;
          updateStatus(registro.tipo + ' Registrada!', registro.hora);
        } else {
          resultEl.className = 'registro-result';
          resultEl.innerHTML = `<i class="bi bi-x-circle me-2"></i>${registro.error || 'Erro ao registrar'}`;
        }

        // Cooldown de 5 segundos antes de permitir novo registro
        startCooldown();

      } catch (err) {
        document.getElementById('registroResult').innerHTML = 'Erro ao registrar';
      }
    }

    // Trata quando nao reconhecido
    function handleNotRecognized(message) {
      faceGuide.className = 'face-guide error';
      updateStatus('Nao reconhecido', message);
      userInfo.classList.remove('show');

      setTimeout(() => {
        faceGuide.className = 'face-guide detecting';
        updateStatus('Posicione seu rosto', 'Dentro da moldura oval');
      }, 2000);
    }

    // Cooldown apos registro
    function startCooldown() {
      cooldownActive = true;
      let seconds = 5;

      const countdown = document.getElementById('countdown');

      const countInterval = setInterval(() => {
        if (seconds > 0) {
          countdown.textContent = seconds;
          countdown.classList.add('show');
          seconds--;

          setTimeout(() => countdown.classList.remove('show'), 900);
        } else {
          clearInterval(countInterval);
          cooldownActive = false;
          userInfo.classList.remove('show');
          faceGuide.className = 'face-guide detecting';
          updateStatus('Posicione seu rosto', 'Dentro da moldura oval');
        }
      }, 1000);
    }

    function voltarApp() {
      window.location.href = '/app';
    }

    // Mostra loading
    function showLoading(text = 'Processando...') {
      document.getElementById('loadingText').textContent = text;
      loadingOverlay.classList.add('show');
    }

    function hideLoading() {
      loadingOverlay.classList.remove('show');
    }

    // Inicializa
    document.addEventListener('DOMContentLoaded', () => {
      initCamera();

      // Verifica status da API periodicamente
      setInterval(checkAPIStatus, 30000);
    });

    // Limpa ao sair
    window.addEventListener('beforeunload', () => {
      if (videoStream) {
        videoStream.getTracks().forEach(track => track.stop());
      }
      stopAutoCapture();
    });
  </script>
</body>
</html>
