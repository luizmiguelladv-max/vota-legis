<!DOCTYPE html>
<html lang="pt-BR">
<script>
  // Carrega tema ANTES de renderizar (evita piscar)
  (function() {
    const theme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-bs-theme', theme);
  })();
</script>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="{{ csrfToken }}">
  <title>Selecionar Câmara Municipal - Votação Eletrônica Legislativa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Light Mode */
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .main-container {
      width: 100%;
      max-width: 580px;
    }

    .card-main {
      background: #fff;
      border-radius: 24px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      overflow: hidden;
    }

    .card-header-custom {
      text-align: center;
      padding: 2.5rem 2rem 1.5rem;
    }

    .icon-building {
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
      border-radius: 16px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.25rem;
    }

    .icon-building i {
      font-size: 2rem;
      color: #fff;
    }

    .card-header-custom h4 {
      font-size: 1.75rem;
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 0.5rem;
    }

    .card-header-custom p {
      color: #6b7280;
      font-size: 0.95rem;
    }

    .card-body-custom {
      padding: 0 2rem 2rem;
    }

    /* User Info */
    .user-info {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.25rem;
      background: #f9fafb;
      border-radius: 12px;
      margin-bottom: 1rem;
    }

    .user-info-left {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .user-avatar {
      width: 44px;
      height: 44px;
      background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #4f46e5;
    }

    .user-name {
      font-weight: 600;
      color: #1f2937;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .badge-master {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: #fff;
      font-size: 0.65rem;
      font-weight: 600;
      padding: 0.25rem 0.5rem;
      border-radius: 6px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .badge-master i {
      font-size: 0.6rem;
    }

    .user-role {
      font-size: 0.8rem;
      color: #6b7280;
    }

    .btn-sair {
      background: #fff;
      border: 1px solid #e5e7eb;
      color: #374151;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s;
      text-decoration: none;
    }

    .btn-sair:hover {
      background: #f3f4f6;
      border-color: #d1d5db;
      color: #374151;
    }

    /* Info Alert */
    .info-alert {
      background: linear-gradient(135deg, #ecfeff 0%, #cffafe 100%);
      border: 1px solid #a5f3fc;
      border-radius: 12px;
      padding: 0.875rem 1rem;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .info-alert i {
      color: #0891b2;
      font-size: 1.1rem;
    }

    .info-alert span {
      color: #155e75;
      font-size: 0.875rem;
    }

    .info-alert strong {
      color: #0e7490;
    }

    /* Search */
    .search-box {
      position: relative;
      margin-bottom: 1rem;
    }

    .search-box i {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #9ca3af;
    }

    .search-box input {
      width: 100%;
      padding: 0.875rem 1rem 0.875rem 2.75rem;
      border: 1px solid #e5e7eb;
      border-radius: 12px;
      font-size: 0.95rem;
      transition: all 0.2s;
      background: #fff;
      color: #1f2937;
    }

    .search-box input:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .search-box input::placeholder {
      color: #9ca3af;
    }

    /* Municipios List */
    .municipios-list {
      max-height: 300px;
      overflow-y: auto;
      margin-bottom: 1.5rem;
    }

    .municipio-item {
      display: flex;
      align-items: center;
      padding: 1rem;
      border: 2px solid transparent;
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.2s;
      margin-bottom: 0.5rem;
    }

    .municipio-item:hover {
      background: #f9fafb;
    }

    .municipio-item.selected {
      background: #eff6ff;
      border-color: #3b82f6;
    }

    .municipio-icon {
      width: 48px;
      height: 48px;
      background: #f3f4f6;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 1rem;
      flex-shrink: 0;
    }

    .municipio-icon i {
      font-size: 1.25rem;
      color: #6b7280;
    }

    .municipio-icon img {
      width: 36px;
      height: 36px;
      object-fit: contain;
    }

    .municipio-info {
      flex: 1;
    }

    .municipio-nome {
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 0.25rem;
    }

    .municipio-detalhes {
      font-size: 0.8rem;
      color: #6b7280;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .municipio-detalhes i {
      font-size: 0.75rem;
    }

    .municipio-check {
      width: 24px;
      height: 24px;
      border: 2px solid #d1d5db;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }

    .municipio-item.selected .municipio-check {
      background: #3b82f6;
      border-color: #3b82f6;
    }

	    .municipio-item.selected .municipio-check i {
	      color: #fff;
	      font-size: 0.75rem;
	    }

	    /* Botão "entrar" direto no item (setinha) */
	    .municipio-action {
	      margin-left: 0.75rem;
	      display: flex;
	      align-items: center;
	    }

	    .btn-entrar-item {
	      width: 36px;
	      height: 36px;
	      border: 0;
	      border-radius: 10px;
	      background: rgba(59, 130, 246, 0.12);
	      color: #1d4ed8;
	      display: inline-flex;
	      align-items: center;
	      justify-content: center;
	      transition: all 0.15s ease;
	    }

	    .btn-entrar-item:hover {
	      background: rgba(59, 130, 246, 0.18);
	      transform: translateX(1px);
	    }

	    /* Empty State */
	    .empty-state {
	      text-align: center;
	      padding: 2rem;
      color: #6b7280;
    }

    .empty-state i {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    /* Buttons */
    .btn-entrar {
      width: 100%;
      background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
      border: none;
      color: #fff;
      padding: 1rem;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      transition: all 0.2s;
      margin-bottom: 0.75rem;
    }

    .btn-entrar:hover:not(:disabled) {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.4);
      color: #fff;
    }

    .btn-entrar:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .btn-gerenciar {
      width: 100%;
      background: #fff;
      border: 1px solid #e5e7eb;
      color: #374151;
      padding: 0.875rem;
      border-radius: 12px;
      font-size: 0.95rem;
      font-weight: 500;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .btn-gerenciar:hover {
      background: #f9fafb;
      border-color: #d1d5db;
      color: #374151;
    }

    /* Scrollbar */
    .municipios-list::-webkit-scrollbar {
      width: 6px;
    }

    .municipios-list::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 3px;
    }

    .municipios-list::-webkit-scrollbar-thumb {
      background: #c1c1c1;
      border-radius: 3px;
    }

    .municipios-list::-webkit-scrollbar-thumb:hover {
      background: #a1a1a1;
    }

    /* ===== DARK MODE ===== */
    [data-bs-theme="dark"] {
      --bg-dark: #1e2530;
      --bg-card: #262f3d;
      --bg-input: #2d3848;
      --border-color: #3d4a5c;
      --text-primary: #e4e6eb;
      --text-secondary: #a8b3c5;
    }

    [data-bs-theme="dark"] body {
      background: linear-gradient(135deg, #1a1f2e 0%, #2d1f3d 50%, #1a2332 100%);
    }

    [data-bs-theme="dark"] .card-main {
      background: var(--bg-card);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    [data-bs-theme="dark"] .card-header-custom h4 {
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .card-header-custom p {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .user-info {
      background: var(--bg-input);
    }

    [data-bs-theme="dark"] .user-name {
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .user-role {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .user-avatar {
      background: linear-gradient(135deg, #3b4252 0%, #4c566a 100%);
      color: #88c0d0;
    }

    [data-bs-theme="dark"] .btn-sair {
      background: var(--bg-input);
      border-color: var(--border-color);
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .btn-sair:hover {
      background: #3d4a5c;
      border-color: #4d5a6c;
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .info-alert {
      background: linear-gradient(135deg, rgba(6, 182, 212, 0.15) 0%, rgba(14, 165, 233, 0.15) 100%);
      border-color: rgba(6, 182, 212, 0.3);
    }

    [data-bs-theme="dark"] .info-alert i {
      color: #22d3ee;
    }

    [data-bs-theme="dark"] .info-alert span {
      color: #a5f3fc;
    }

    [data-bs-theme="dark"] .info-alert strong {
      color: #67e8f9;
    }

    [data-bs-theme="dark"] .search-box input {
      background: var(--bg-input);
      border-color: var(--border-color);
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .search-box input:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    [data-bs-theme="dark"] .search-box input::placeholder {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .search-box i {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .municipio-item:hover {
      background: var(--bg-input);
    }

    [data-bs-theme="dark"] .municipio-item.selected {
      background: rgba(59, 130, 246, 0.15);
      border-color: #3b82f6;
    }

    [data-bs-theme="dark"] .municipio-icon {
      background: var(--bg-input);
    }

    [data-bs-theme="dark"] .municipio-icon i {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .municipio-nome {
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .municipio-detalhes {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .municipio-check {
      border-color: var(--border-color);
    }

    [data-bs-theme="dark"] .empty-state {
      color: var(--text-secondary);
    }

    [data-bs-theme="dark"] .btn-gerenciar {
      background: var(--bg-input);
      border-color: var(--border-color);
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .btn-gerenciar:hover {
      background: #3d4a5c;
      border-color: #4d5a6c;
      color: var(--text-primary);
    }

    [data-bs-theme="dark"] .municipios-list::-webkit-scrollbar-track {
      background: var(--bg-input);
    }

    [data-bs-theme="dark"] .municipios-list::-webkit-scrollbar-thumb {
      background: var(--border-color);
    }

    [data-bs-theme="dark"] .municipios-list::-webkit-scrollbar-thumb:hover {
      background: #5d6a7c;
    }

    /* Responsive */
    @media (max-width: 576px) {
      body {
        padding: 1rem;
      }

      .card-header-custom {
        padding: 2rem 1.5rem 1rem;
      }

      .card-body-custom {
        padding: 0 1.5rem 1.5rem;
      }

      .user-info {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
      }

      .user-info-left {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="main-container">
    <div class="card-main">
      {{-- Header --}}
      <div class="card-header-custom">
        <div class="icon-building">
          <i class="bi bi-building"></i>
        </div>
        <h4>Selecione a Câmara Municipal</h4>
        <p>Escolha o município para acessar o sistema de votação</p>
      </div>

      {{-- Body --}}
      <div class="card-body-custom">
        {{-- User Info --}}
        <div class="user-info">
          <div class="user-info-left">
            <div class="user-avatar">
              <i class="bi bi-person-fill"></i>
            </div>
            <div>
              <div class="user-name">
                {{ usuario?.nome || 'Usuário' }}
                @if(isSuperAdmin)
                  <span class="badge-master"><i class="bi bi-shield-check me-1"></i>MASTER</span>
                @endif
              </div>
              <div class="user-role">
                @if(isSuperAdmin)
                  Acesso total a todos os municípios
                @else
                  {{ usuario?.perfil || 'Usuário' }}
                @endif
              </div>
            </div>
          </div>
          <a href="/logout" class="btn-sair">
            <i class="bi bi-box-arrow-right me-1"></i>Sair
          </a>
        </div>

        {{-- Info Alert (apenas para master) --}}
        @if(isSuperAdmin)
          <div class="info-alert">
            <i class="bi bi-info-circle-fill"></i>
            <span><strong>Usuário Master:</strong> Você pode acessar qualquer município do sistema.</span>
          </div>
        @endif

        {{-- Search --}}
        <div class="search-box" id="searchBox">
          <i class="bi bi-search"></i>
          <input type="text" id="searchMunicipio" placeholder="Buscar município..." oninput="filtrarMunicipios()">
        </div>

        {{-- Municipios List --}}
        <div id="stepMunicipio">
          <div class="municipios-list" id="municipiosList">
            @if(municipios.length === 0)
              <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p>Nenhum município disponível</p>
              </div>
            @else
	              @each(municipio in municipios)
	                <div class="municipio-item" data-id="{{ municipio.id }}" data-nome="{{ municipio.nome }}" onclick="selecionarMunicipio(this)">
	                  <div class="municipio-icon">
	                    @if(municipio.logoUrl)
	                      <img src="{{ municipio.logoUrl }}" alt="{{ municipio.nome }}">
	                    @else
	                      <i class="bi bi-building"></i>
	                    @endif
	                  </div>
	                  <div class="municipio-info">
	                    <div class="municipio-nome">{{ municipio.nome }}</div>
	                    <div class="municipio-detalhes">
	                      <span><i class="bi bi-geo-alt me-1"></i>{{ municipio.uf || 'PB' }}</span>
	                    </div>
	                  </div>
	                  <div class="municipio-action">
	                    <button type="button" class="btn-entrar-item" title="Entrar" onclick="entrarPeloItem(event, this)">
	                      <i class="bi bi-arrow-right"></i>
	                    </button>
	                  </div>
	                  <div class="municipio-check">
	                    <i class="bi bi-check"></i>
	                  </div>
	                </div>
	              @endeach
            @endif
          </div>
        </div>

        {{-- Buttons --}}
        <button class="btn-entrar" id="btnEntrar" onclick="entrarSistema()" disabled>
          <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
        </button>

        @if(isSuperAdmin)
          <a href="/admin/municipios" class="btn-gerenciar">
            <i class="bi bi-gear me-2"></i>Gerenciar Municípios
          </a>
        @endif
      </div>
    </div>
  </div>

  <script>
    let municipioSelecionado = null;

    function selecionarMunicipio(el) {
      // Remove seleção anterior
      document.querySelectorAll('#municipiosList .municipio-item').forEach(item => {
        item.classList.remove('selected');
      });

      // Adiciona seleção
      el.classList.add('selected');
      municipioSelecionado = el.dataset.id;
      document.getElementById('btnEntrar').disabled = false;
    }

    function filtrarMunicipios() {
      const termo = document.getElementById('searchMunicipio').value.toLowerCase();
      const items = document.querySelectorAll('#municipiosList .municipio-item');

      items.forEach(item => {
        const nome = item.dataset.nome.toLowerCase();
        if (nome.includes(termo)) {
          item.style.display = 'flex';
        } else {
          item.style.display = 'none';
        }
      });
    }

	    async function entrarSistema() {
	      if (!municipioSelecionado) return;

      const btn = document.getElementById('btnEntrar');
      btn.disabled = true;
      btn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Entrando...';

      try {
        const response = await fetch('/selecionar-municipio', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]')?.content
          },
          credentials: 'include',
          body: JSON.stringify({
            municipioId: parseInt(municipioSelecionado)
          })
        });

        if (response.redirected) {
          window.location.href = response.url;
        } else {
          const data = await response.json();
          if (data.success) {
            window.location.href = data.redirectTo || '/dashboard';
          } else {
            alert(data.error || 'Erro ao selecionar');
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-box-arrow-in-right me-2"></i>Entrar';
	    }

	    function entrarPeloItem(event, btn) {
	      event.preventDefault();
	      event.stopPropagation();
	      const item = btn.closest('.municipio-item');
	      if (!item) return;
	      selecionarMunicipio(item);
	      entrarSistema();
	    }
        }
      } catch (error) {
        console.error('Erro:', error);
        alert('Erro ao conectar ao servidor');
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-box-arrow-in-right me-2"></i>Entrar';
      }
    }

    // Duplo clique para avançar
    document.querySelectorAll('#municipiosList .municipio-item').forEach(item => {
      item.addEventListener('dblclick', function() {
        selecionarMunicipio(this);
        entrarSistema();
      });
    });

    // Selecionar primeiro município automaticamente se só tiver um
    const items = document.querySelectorAll('#municipiosList .municipio-item');
    if (items.length === 1) {
      selecionarMunicipio(items[0]);
    }
  </script>
</body>
</html>
