<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="{{ csrfToken }}">
  <title>Login - {{ entidade.nome_curto || entidade.nome }}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --cor-primaria: {{ entidade.cor_primaria || '#1a73e8' }};
      --cor-secundaria: {{ entidade.cor_secundaria || '#4285f4' }};
    }
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, var(--cor-primaria) 0%, var(--cor-secundaria) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .login-card {
      max-width: 420px;
      width: 100%;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      overflow: hidden;
    }
    .login-header {
      background: linear-gradient(135deg, var(--cor-primaria) 0%, var(--cor-secundaria) 100%);
      color: #fff;
      padding: 30px;
      text-align: center;
    }
    .login-header img {
      max-height: 60px;
      margin-bottom: 15px;
    }
    .login-body {
      padding: 30px;
    }
    .step { display: none; }
    .step.active { display: block; }
    .form-control:focus {
      border-color: var(--cor-primaria);
      box-shadow: 0 0 0 0.2rem rgba(26, 115, 232, 0.25);
    }
    .btn-login {
      background: linear-gradient(135deg, var(--cor-primaria) 0%, var(--cor-secundaria) 100%);
      border: none;
      padding: 12px;
      font-weight: 600;
    }
    .btn-login:hover { opacity: 0.9; }
    .input-group-text {
      background: #f8f9fa;
      border-right: none;
    }
    .input-group .form-control { border-left: none; }
    .code-inputs {
      display: flex;
      gap: 10px;
      justify-content: center;
    }
    .code-input {
      width: 50px;
      height: 60px;
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
    }
    .code-input:focus {
      border-color: var(--cor-primaria);
      outline: none;
    }
    .timer { font-size: 14px; color: #666; }
    .timer.warning { color: #dc3545; }
    .divider {
      display: flex;
      align-items: center;
      margin: 20px 0;
    }
    .divider::before, .divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid #e0e0e0;
    }
    .divider span {
      padding: 0 15px;
      color: #999;
      font-size: 13px;
    }
    .btn-funcionario {
      background: #f8f9fa;
      border: 2px solid #e0e0e0;
      color: #333;
      font-weight: 500;
    }
    .btn-funcionario:hover {
      background: #e9ecef;
      border-color: #ccc;
    }
  </style>
</head>
<body>
  <div class="login-card">
    <div class="login-header">
      @if(entidade.logo_url)
        <img src="{{ entidade.logo_url }}" alt="{{ entidade.nome_curto }}">
      @else
        <i class="bi bi-building" style="font-size: 3rem;"></i>
      @end
      <h5 class="mt-2 mb-1">{{ entidade.nome_curto || entidade.nome }}</h5>
      <p class="mb-0 small opacity-75">Sistema de Ponto Eletrônico</p>
    </div>
    <div class="login-body">
      <!-- Step 1: Email -->
      <div id="step1" class="step active">
        <p class="text-muted mb-3 text-center">Acesso para gestores e administradores</p>
        <form id="formEmail">
          <input type="hidden" id="entidadeId" value="{{ entidade.id }}">
          <input type="hidden" id="entidadeCodigo" value="{{ entidade.codigo }}">

          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <input type="email" class="form-control" id="inputEmail" placeholder="seu@email.com" required autofocus>
            </div>
          </div>
          <div id="alertEmail" class="mb-3"></div>
          <button type="submit" class="btn btn-primary btn-login w-100" id="btnEnviarCodigo">
            <span class="spinner-border spinner-border-sm d-none me-2" id="spinnerEmail"></span>
            <i class="bi bi-send me-2"></i>Receber Código de Acesso
          </button>
        </form>

        <div class="divider"><span>funcionário?</span></div>

        <a href="/app-mobile" class="btn btn-funcionario w-100">
          <i class="bi bi-phone me-2"></i>Acessar App de Ponto
        </a>
      </div>

      <!-- Step 2: Código -->
      <div id="step2" class="step">
        <p class="text-muted mb-2 text-center">Digite o código enviado para:</p>
        <p class="fw-bold mb-4 text-center" id="emailMascarado">l***@email.com</p>
        <form id="formCodigo">
          <div class="code-inputs mb-3">
            <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" required>
            <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" required>
            <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" required>
            <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" required>
            <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" required>
            <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" required>
          </div>
          <div class="text-center timer mb-3" id="timer">Expira em 5:00</div>
          <div id="alertCodigo" class="mb-3"></div>
          <button type="submit" class="btn btn-primary btn-login w-100" id="btnValidarCodigo">
            <span class="spinner-border spinner-border-sm d-none me-2" id="spinnerCodigo"></span>
            <i class="bi bi-check-lg me-2"></i>Validar Código
          </button>
        </form>
        <div class="text-center mt-3">
          <button type="button" class="btn btn-link text-muted" id="btnReenviar" disabled>Reenviar código</button>
        </div>
        <div class="text-center mt-2">
          <a href="#" class="text-muted small" onclick="voltarStep1()"><i class="bi bi-arrow-left me-1"></i>Usar outro email</a>
        </div>
      </div>
    </div>
    <div class="text-center pb-3">
      <small class="text-muted">getponto.inf.br</small>
    </div>
  </div>

  <script>
    let emailAtual = '';
    let timerInterval = null;
    let tempoRestante = 300;
    const entidadeId = document.getElementById('entidadeId').value;
    const entidadeCodigo = document.getElementById('entidadeCodigo').value;

    // Step 1: Enviar código
    document.getElementById('formEmail').addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = document.getElementById('inputEmail').value;
      const btn = document.getElementById('btnEnviarCodigo');
      const spinner = document.getElementById('spinnerEmail');
      const alert = document.getElementById('alertEmail');

      alert.innerHTML = '';
      btn.disabled = true;
      spinner.classList.remove('d-none');

      try {
        const res = await fetch('/api/auth/solicitar-codigo', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });
        const data = await res.json();

        if (data.success) {
          emailAtual = email;
          document.getElementById('emailMascarado').textContent = data.emailMascarado || email;
          irParaStep(2);
          iniciarTimer();
          document.querySelector('.code-input').focus();
        } else {
          alert.innerHTML = `<div class="alert alert-danger py-2"><i class="bi bi-exclamation-circle me-2"></i>${data.error}</div>`;
        }
      } catch (err) {
        alert.innerHTML = '<div class="alert alert-danger py-2"><i class="bi bi-exclamation-circle me-2"></i>Erro de conexão</div>';
      } finally {
        btn.disabled = false;
        spinner.classList.add('d-none');
      }
    });

    // Step 2: Validar código
    document.getElementById('formCodigo').addEventListener('submit', async (e) => {
      e.preventDefault();
      const inputs = document.querySelectorAll('.code-input');
      const codigo = Array.from(inputs).map(i => i.value).join('');

      if (codigo.length !== 6) {
        document.getElementById('alertCodigo').innerHTML = '<div class="alert alert-warning py-2">Digite o código completo</div>';
        return;
      }

      const btn = document.getElementById('btnValidarCodigo');
      const spinner = document.getElementById('spinnerCodigo');
      const alert = document.getElementById('alertCodigo');

      alert.innerHTML = '';
      btn.disabled = true;
      spinner.classList.remove('d-none');

      try {
        // Primeiro valida o código
        const resValidar = await fetch('/api/auth/validar-codigo-admin', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: emailAtual, codigo })
        });
        const dataValidar = await resValidar.json();

        if (!dataValidar.success) {
          alert.innerHTML = `<div class="alert alert-danger py-2"><i class="bi bi-exclamation-circle me-2"></i>${dataValidar.error}</div>`;
          inputs.forEach(i => i.value = '');
          inputs[0].focus();
          btn.disabled = false;
          spinner.classList.add('d-none');
          return;
        }

        pararTimer();

        // Verifica se o usuário tem acesso a esta entidade
        const entidadeDisponivel = dataValidar.entidades.find(e => e.id == entidadeId);
        if (!entidadeDisponivel) {
          alert.innerHTML = '<div class="alert alert-danger py-2"><i class="bi bi-exclamation-circle me-2"></i>Você não tem acesso a esta entidade.</div>';
          btn.disabled = false;
          spinner.classList.add('d-none');
          return;
        }

        // Faz login direto nesta entidade
        const resLogin = await fetch('/api/auth/selecionar-entidade', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ entidadeId: Number(entidadeId) })
        });
        const dataLogin = await resLogin.json();

        if (dataLogin.success && dataLogin.redirectTo) {
          if (dataLogin.token) {
            localStorage.setItem('token', dataLogin.token);
          }
          alert.innerHTML = '<div class="alert alert-success py-2"><i class="bi bi-check-circle me-2"></i>Login realizado!</div>';
          setTimeout(() => {
            window.location.href = dataLogin.redirectTo;
          }, 500);
        } else {
          alert.innerHTML = `<div class="alert alert-danger py-2"><i class="bi bi-exclamation-circle me-2"></i>${dataLogin.error}</div>`;
          btn.disabled = false;
          spinner.classList.add('d-none');
        }
      } catch (err) {
        alert.innerHTML = '<div class="alert alert-danger py-2"><i class="bi bi-exclamation-circle me-2"></i>Erro de conexão</div>';
        btn.disabled = false;
        spinner.classList.add('d-none');
      }
    });

    // Code input navigation
    document.querySelectorAll('.code-input').forEach((input, index, inputs) => {
      input.addEventListener('input', (e) => {
        if (e.target.value.length === 1 && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
      });
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Backspace' && !e.target.value && index > 0) {
          inputs[index - 1].focus();
        }
      });
      input.addEventListener('paste', (e) => {
        e.preventDefault();
        const paste = (e.clipboardData || window.clipboardData).getData('text');
        const digits = paste.replace(/\D/g, '').slice(0, 6);
        digits.split('').forEach((d, i) => { if (inputs[i]) inputs[i].value = d; });
        if (digits.length === 6) {
          document.getElementById('formCodigo').dispatchEvent(new Event('submit'));
        }
      });
    });

    function irParaStep(step) {
      document.querySelectorAll('.step').forEach(s => s.classList.remove('active'));
      document.getElementById(`step${step}`).classList.add('active');
    }

    function voltarStep1() {
      pararTimer();
      emailAtual = '';
      document.getElementById('inputEmail').value = '';
      document.querySelectorAll('.code-input').forEach(i => i.value = '');
      document.getElementById('alertEmail').innerHTML = '';
      document.getElementById('alertCodigo').innerHTML = '';
      irParaStep(1);
      document.getElementById('inputEmail').focus();
    }

    function iniciarTimer() {
      tempoRestante = 300;
      atualizarTimer();
      timerInterval = setInterval(() => {
        tempoRestante--;
        atualizarTimer();
        if (tempoRestante <= 0) {
          pararTimer();
          document.getElementById('alertCodigo').innerHTML = '<div class="alert alert-warning py-2">Código expirado. Solicite um novo.</div>';
          document.getElementById('btnReenviar').disabled = false;
        }
      }, 1000);
      setTimeout(() => { document.getElementById('btnReenviar').disabled = false; }, 30000);
    }

    function atualizarTimer() {
      const min = Math.floor(tempoRestante / 60);
      const sec = tempoRestante % 60;
      const timer = document.getElementById('timer');
      timer.textContent = `Expira em ${min}:${sec.toString().padStart(2, '0')}`;
      timer.classList.toggle('warning', tempoRestante <= 60);
    }

    function pararTimer() {
      if (timerInterval) { clearInterval(timerInterval); timerInterval = null; }
    }

    document.getElementById('btnReenviar').addEventListener('click', async () => {
      if (!emailAtual) return;
      const btn = document.getElementById('btnReenviar');
      btn.disabled = true;
      btn.textContent = 'Enviando...';
      try {
        const res = await fetch('/api/auth/solicitar-codigo', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: emailAtual })
        });
        const data = await res.json();
        if (data.success) {
          document.querySelectorAll('.code-input').forEach(i => i.value = '');
          document.querySelector('.code-input').focus();
          document.getElementById('alertCodigo').innerHTML = '<div class="alert alert-success py-2"><i class="bi bi-check-circle me-2"></i>Novo código enviado!</div>';
          iniciarTimer();
        } else {
          document.getElementById('alertCodigo').innerHTML = `<div class="alert alert-danger py-2">${data.error}</div>`;
        }
      } catch (err) {
        document.getElementById('alertCodigo').innerHTML = '<div class="alert alert-danger py-2">Erro ao reenviar</div>';
      } finally {
        btn.textContent = 'Reenviar código';
      }
    });
  </script>
</body>
</html>
