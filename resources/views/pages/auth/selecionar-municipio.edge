<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="{{ csrfToken }}">
  <title>Selecionar Camara - Sistema de Votacao</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #1a365d 0%, #2c5282 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    .select-card {
      max-width: 600px;
      width: 100%;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }
    .select-header {
      background: linear-gradient(135deg, #1a365d 0%, #2c5282 100%);
      color: #fff;
      padding: 2rem;
      text-align: center;
      border-radius: 1rem 1rem 0 0;
    }
    .select-body {
      padding: 2rem;
    }
    .municipio-item {
      border: 2px solid #e2e8f0;
      border-radius: 0.75rem;
      padding: 1rem;
      margin-bottom: 0.75rem;
      cursor: pointer;
      transition: all 0.2s;
    }
    .municipio-item:hover {
      border-color: #2c5282;
      background: #f8fafc;
    }
    .municipio-item.selected {
      border-color: #2c5282;
      background: #ebf4ff;
    }
    .btn-entrar {
      background: linear-gradient(135deg, #1a365d 0%, #2c5282 100%);
      border: none;
      padding: 0.75rem;
      font-weight: 600;
    }
    .btn-entrar:hover {
      background: linear-gradient(135deg, #0f2744 0%, #1a4971 100%);
    }
  </style>
</head>
<body>
  <div class="select-card">
    <div class="select-header">
      <i class="bi bi-building" style="font-size: 3rem;"></i>
      <h4 class="mt-3 mb-1">Selecionar Camara</h4>
      <p class="mb-0 small opacity-75">Escolha a camara que deseja acessar</p>
    </div>
    <div class="select-body">
      @if(flashMessages.has('error'))
        <div class="alert alert-danger py-2 mb-3">
          <i class="bi bi-exclamation-circle me-2"></i>{{ flashMessages.get('error') }}
        </div>
      @endif

      @if(municipios && municipios.length > 0)
        <form method="POST" action="{{ route('selecionar-municipio.post') }}" id="formMunicipio">
          {{ csrfField() }}
          <input type="hidden" name="municipio_id" id="municipioId">
          
          <div class="municipios-list" style="max-height: 400px; overflow-y: auto;">
            @each(municipio in municipios)
              <div class="municipio-item" onclick="selectMunicipio({{ municipio.id }}, this)">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                    <i class="bi bi-building text-primary fs-4"></i>
                  </div>
                  <div class="flex-grow-1">
                    <h6 class="mb-0">{{ municipio.nome }}</h6>
                    <small class="text-muted">{{ municipio.uf }}</small>
                  </div>
                  <i class="bi bi-chevron-right text-muted"></i>
                </div>
              </div>
            @end
          </div>

          <button type="submit" class="btn btn-primary btn-entrar w-100 mt-3" id="btnEntrar" disabled>
            <i class="bi bi-box-arrow-in-right me-2"></i>Acessar Camara
          </button>
        </form>
      @else
        <div class="text-center py-4">
          <i class="bi bi-building-x text-muted" style="font-size: 4rem;"></i>
          <p class="text-muted mt-3 mb-4">Nenhuma camara cadastrada</p>
          @if(tenant && tenant.isSuperAdmin)
            <a href="{{ route('admin.municipios.create') }}" class="btn btn-primary">
              <i class="bi bi-plus-lg me-2"></i>Cadastrar Camara
            </a>
          @end
        </div>
      @endif
    </div>
    <div class="text-center pb-3 border-top pt-3">
      <small class="text-muted">
        Logado como <strong>{{ tenant?.usuario?.nome || 'Usuario' }}</strong>
        <a href="{{ route('logout') }}" class="ms-3 text-danger">
          <i class="bi bi-box-arrow-left"></i> Sair
        </a>
      </small>
    </div>
  </div>

  <script>
    let selectedId = null;
    
    function selectMunicipio(id, element) {
      document.querySelectorAll('.municipio-item').forEach(el => el.classList.remove('selected'));
      element.classList.add('selected');
      document.getElementById('municipioId').value = id;
      document.getElementById('btnEntrar').disabled = false;
      selectedId = id;
    }
  </script>
</body>
</html>
