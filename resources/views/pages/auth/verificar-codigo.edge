  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const inputs = document.querySelectorAll('.code-digit');
      const codigoCompleto = document.getElementById('codigoCompleto');

      function updateCodigoCompleto() {
        let codigo = '';
        inputs.forEach(input => {
          codigo += input.value;
        });
        codigoCompleto.value = codigo;
      }

      inputs.forEach((input, index) => {
        input.addEventListener('input', function(e) {
          // Remove caracteres nao numericos
          this.value = this.value.replace(/[^0-9]/g, '');

          // Atualiza o codigo completo
          updateCodigoCompleto();

          // Move para o proximo input
          if (this.value.length === 1 && index < inputs.length - 1) {
            inputs[index + 1].focus();
          }
        });

        input.addEventListener('keydown', function(e) {
          // Backspace - volta para o input anterior
          if (e.key === 'Backspace' && !this.value && index > 0) {
            inputs[index - 1].focus();
          }
        });

        input.addEventListener('paste', function(e) {
          e.preventDefault();
          const pastedData = e.clipboardData.getData('text').replace(/[^0-9]/g, '');

          for (let i = 0; i < pastedData.length && i < inputs.length; i++) {
            inputs[i].value = pastedData[i];
          }

          updateCodigoCompleto();

          // Foca no ultimo input preenchido
          const lastIndex = Math.min(pastedData.length - 1, inputs.length - 1);
          if (lastIndex >= 0) {
            inputs[lastIndex].focus();
          }
        });
      });
    });
  </script>
</body>
</html>
